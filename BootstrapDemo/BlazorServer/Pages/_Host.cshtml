@page "/"
@namespace BlazorServer.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BlazorServer</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    @if (Request.Path.Value == "/Tesla")
    {
        <link rel="stylesheet" href="Tesla/assets/bootstrap/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:300,400,600">
        <link rel="stylesheet" href="Tesla/assets/fonts/ionicons.min.css">
        <link rel="stylesheet" href="Tesla/assets/css/styles.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.1.1/aos.css">
    }
    @if (Request.Path.Value == "/Apple")
    {
        <link rel="stylesheet" href="Apple/assets/bootstrap/css/bootstrap.min.css">
        <link rel="stylesheet" href="Apple/assets/fonts/font-awesome.min.css">
        <link rel="stylesheet" href="Apple/assets/css/styles.min.css">
    }
</head>
<body>
    <app>
        <component type="typeof(App)" render-mode="Static" />
    </app>

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">ðŸ—™</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
    @if(Request.Path.Value == "/Tesla")
    {
            <script src="Tesla/assets/js/jquery.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.1.1/aos.js"></script>
            <script src="Tesla/assets/js/script.min.js"></script>
    }
    @if(Request.Path.Value == "/Apple")
    {
            <script src="Apple/assets/js/jquery.min.js"></script>
    }
</body>
</html>
